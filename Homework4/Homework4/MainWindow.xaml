<Window x:Class="Homework4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Horizontal">
        <TextBlock Height="20" Margin="58,0,50,0" FontWeight="Bold" FontSize="16" FontFamily="Arial Black" > Zip code: </TextBlock>
        <TextBox x:Name="uxZip" Width="300" Height="20" TextChanged="uxZipChanged"/>
        <Button x:Name ="uxSubmitButton"  Height="20" > Submit </Button>
    </StackPanel>
</Window>
