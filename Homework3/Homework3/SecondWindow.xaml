<Window x:Class="Homework3.SecondWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework3"
        mc:Ignorable="d"
        Title="SecondWindow" Height="300" Width="300">
    <Grid>
        <ListView x:Name="uxList">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="User Name" Width="100">
                        <!--<GridViewColumnHeader x:Name="uxNameHeader" Content="Name" Click="uxNameHeader_Click"/>-->
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Password}" Header="Password" Width="100">
                        <!--<GridViewColumnHeader x:Name="uxPassordHeader" Content="Password" Click="uxNamePassword_Click"/>-->
                    </GridViewColumn>

                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>